{
	"name": "zero-svelte",
	"version": "0.8.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"dev:zero-cache": "zero-cache-dev -p src/schema.ts",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"release": "changeset publish",
		"changeset": "changeset",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"sync": "svelte-kit sync",
		"verify": "npm run format && (git diff --quiet || (echo \"Prettier made changes. Run 'npm run format' and commit them.\" && git --no-pager diff --name-only && exit 1)) && npm run lint && npm run check && npm run build && npm run package",
		"dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up",
		"dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
		"test": "vitest",
		"test:watch": "vitest -w",
		"coverage": "vitest run --coverage"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.15.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.42.2",
		"@sveltejs/package": "^2.5.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/eslint": "^9.6.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^16.4.0",
		"jsdom": "^27.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.13",
		"svelte": "^5.39.2",
		"svelte-check": "^4.3.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.6",
		"vitest": "^3.2.4",
		"zod": "^4.1.5"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/stolinski/zero-svelte"
	},
	"dependencies": {
		"@rocicorp/zero": "^0.23.2025090100"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=22"
	}
}
